        this.setAttribute( 'hex', val );
    }

    get hex() {
        if ( this.getAttribute( 'hex' ) ) {
            return this.getAttribute( 'hex' );
        }
        else return {{ nameClass }}.DEFAULT_HEX;
    }

    /**
